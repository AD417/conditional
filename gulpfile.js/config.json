{
  "root": {
    "src": "./frontend",
    "dest": "./conditional/static",
    "publicPath": "static"
  },

  "tasks": {
    "browserSync": {
      "proxy": "127.0.0.1:6969"
    },

    "watch": {
      "tasks": ["images", "css"],
      "paths": ["./conditional/templates"]
    },

    "static": {
      "src": "static",
      "dest": "./"
    },

    "js": {
      "src": "javascript",
      "dest": "js",
      "entries": {
        "app": ["./app.js"]
      },
      "extensions": ["js", "json"],
      "babel": {
        "presets": ["es2015", "stage-1"],
        "plugins": []
      },
      "extractSharedJs": false
    },

    "css": {
      "src": "stylesheets",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": true,
        "includePaths": [
          "./node_modules/csh-material-bootstrap/dist/css"
        ]
      },
      "extensions": ["sass", "scss", "css"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "production" : {
      "rev": true
    }
  }
}
